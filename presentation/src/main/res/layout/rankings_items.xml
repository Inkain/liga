<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="obj" type="inkant1990.com.domain.entity.rankings.TopCards"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    android:layout_marginBottom="5dp">

        <TextView android:id="@+id/Name"
                    android:text="@{obj.playerName}"
                  android:layout_weight="2"
                  style="@style/Rankings"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
        <ImageView android:id="@+id/scorerTeamName"
                   android:layout_weight="1"
                   style="@style/Rankings"
                   android:src="@{obj.teamId}"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
        />
        <TextView android:id="@+id/Points"
                  android:layout_weight="0.7"
                  android:text="@{obj.value.toString()}"
                  style="@style/Rankings"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
    </LinearLayout>
</layout>