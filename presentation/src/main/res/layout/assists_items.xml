<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="obj" type="inkant1990.com.domain.entity.rankings.TopAssists"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/assistsRank"
                  android:layout_weight="0.55"
                  style="@style/Rankings"
                  android:text="@{obj.rank.toString()}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
        <TextView android:id="@+id/scorerName"
                  android:text="@{obj.playerName}"
                  android:layout_weight="3.3"
                  style="@style/Rankings"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
        <ImageView android:id="@+id/scorerTeamName"
                  android:layout_weight="1"
                  style="@style/Rankings"
                  android:src="@{obj.teamId}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
        <TextView android:id="@+id/scorerPoints"
                  android:layout_weight="0.85"
                  style="@style/Rankings"
                  android:text="@{obj.value.toString()}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
    </LinearLayout>
</layout>