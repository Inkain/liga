<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="obj" type="inkant1990.com.domain.entity.rankings.TopScorers"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView android:id="@+id/scorerRank"
                  android:layout_weight="0.7"
                  style="@style/LaligaStyle"
                  android:text="@{obj.rank.toString()}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
        <TextView android:id="@+id/scorerName"
                  android:text="@{obj.playerName}"
                  android:layout_weight="2"
                  style="@style/LaligaStyle"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
        <TextView android:id="@+id/scorerTeamName"
                  android:layout_weight="2"
                  style="@style/LaligaStyle"
                  android:text="@{obj.teamName}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
        <TextView android:id="@+id/scorerPoints"
                  android:layout_weight="0.7"
                  style="@style/LaligaStyle"
                  android:text="@{obj.score.toString()}"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
        />
    </LinearLayout>
</layout>